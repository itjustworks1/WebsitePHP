{% extends 'front/layout.html.twig' %}
{% block main %}
    <main>
    <div class="calculate">
        <form method="post" action="../public/scripts/result.php">
            <input type="number" name="num1" placeholder="Число 1" required>
            <select name="operator" required>
                <option value="+">+</option>
                <option value="-">-</option>
                <option value="*">*</option>
                <option value="/">/</option>
                <option value="^">^</option>
                <option value="√">√</option>
            </select>
            <input type="number" name="num2" placeholder="Число 2" required>

            <button  type="submit" name="btn_result">=</button>
            {{ result }}
        </form>
    </div>
    <div class="calculate">
        <h3>История</h3>
        <form method="post" action="../public/scripts/clear_history.php">
            <button type="submit" name="btn_clear">Очистить историю</button>
        </form>
        <pre>{{ history }}</pre>
    </div>
    </main>
{% endblock %}
